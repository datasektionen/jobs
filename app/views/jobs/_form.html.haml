= semantic_form_for @job do |f|
  -if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :description
  = f.input :company, {:include_blank => false}

  = f.submit 'Save'
